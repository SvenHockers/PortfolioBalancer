{
  "dashboard": {
    "id": null,
    "title": "Interactive Portfolio Analytics - demo-portfolio",
    "tags": [
      "portfolio",
      "interactive",
      "analytics"
    ],
    "timezone": "browser",
    "refresh": "1m",
    "time": {
      "from": "now-1y",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h"
      ],
      "time_options": [
        "5m",
        "15m",
        "1h",
        "6h",
        "12h",
        "24h",
        "2d",
        "7d",
        "30d",
        "90d",
        "1y"
      ],
      "nowDelay": "1m"
    },
    "templating": {
      "list": [
        {
          "name": "portfolio",
          "type": "custom",
          "label": "Portfolio",
          "options": [
            {
              "text": "demo-portfolio",
              "value": "demo-portfolio",
              "selected": true
            }
          ],
          "current": {
            "text": "demo-portfolio",
            "value": "demo-portfolio"
          }
        },
        {
          "name": "time_range",
          "type": "interval",
          "label": "Time Range",
          "auto": true,
          "auto_count": 30,
          "auto_min": "1m"
        },
        {
          "name": "benchmark",
          "type": "query",
          "label": "Benchmark",
          "query": "label_values(benchmark_total_return, benchmark)",
          "refresh": 1,
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Performance Overview - Interactive",
        "type": "stat",
        "targets": [
          {
            "expr": "portfolio_total_return{portfolio_id=\"demo-portfolio\"}",
            "legendFormat": "Total Return",
            "refId": "A"
          },
          {
            "expr": "portfolio_sharpe_ratio{portfolio_id=\"demo-portfolio\"}",
            "legendFormat": "Sharpe Ratio",
            "refId": "B"
          },
          {
            "expr": "portfolio_max_drawdown{portfolio_id=\"demo-portfolio\"}",
            "legendFormat": "Max Drawdown",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "links": [
              {
                "title": "Drill Down to Details",
                "url": "/d/portfolio-details?var-portfolio=demo-portfolio&${__url_time_range}",
                "targetBlank": true
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": -10
                },
                {
                  "color": "yellow",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 5
                }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ]
          },
          "orientation": "horizontal",
          "textMode": "value_and_name",
          "colorMode": "background"
        },
        "gridPos": {
          "h": 4,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Interactive Returns Chart",
        "type": "timeseries",
        "targets": [
          {
            "expr": "portfolio_cumulative_return{portfolio_id=\"demo-portfolio\"}",
            "legendFormat": "Portfolio",
            "refId": "A"
          },
          {
            "expr": "benchmark_cumulative_return{benchmark=\"$benchmark\"}",
            "legendFormat": "{{benchmark}}",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "opacity",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {
                "mode": "none"
              },
              "axisPlacement": "auto",
              "scaleDistribution": {
                "type": "linear"
              },
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "values": [
              "min",
              "max",
              "mean",
              "last"
            ]
          },
          "zoom": {
            "enabled": true
          },
          "pan": {
            "enabled": true
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 4
        }
      },
      {
        "id": 3,
        "title": "Risk Metrics - Interactive",
        "type": "gauge",
        "targets": [
          {
            "expr": "portfolio_volatility{portfolio_id=\"demo-portfolio\"}",
            "legendFormat": "Volatility",
            "refId": "A"
          },
          {
            "expr": "portfolio_beta{portfolio_id=\"demo-portfolio\"}",
            "legendFormat": "Beta",
            "refId": "B"
          },
          {
            "expr": "portfolio_var_95{portfolio_id=\"demo-portfolio\"}",
            "legendFormat": "VaR 95%",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 2,
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.15
                },
                {
                  "color": "red",
                  "value": 0.25
                }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ]
          },
          "orientation": "auto",
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 12
        }
      },
      {
        "id": 4,
        "title": "Active Alerts",
        "type": "table",
        "targets": [
          {
            "expr": "portfolio_active_alerts{portfolio_id=\"demo-portfolio\"}",
            "format": "table",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "displayMode": "color-background"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Severity"
              },
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "steps": [
                      {
                        "color": "green",
                        "value": 0
                      },
                      {
                        "color": "yellow",
                        "value": 1
                      },
                      {
                        "color": "red",
                        "value": 2
                      }
                    ]
                  }
                }
              ]
            }
          ]
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": true,
              "displayName": "Triggered At"
            }
          ]
        },
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 12
        }
      }
    ],
    "links": [
      {
        "title": "Export Report",
        "url": "/api/v1/reports/export?portfolio_id=demo-portfolio",
        "type": "link",
        "icon": "external link"
      },
      {
        "title": "Configure Alerts",
        "url": "/api/v1/alerts/configure?portfolio_id=demo-portfolio",
        "type": "link",
        "icon": "bell"
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Rebalancing Events",
          "datasource": "Portfolio Analytics API",
          "enable": true,
          "iconColor": "blue",
          "query": "portfolio_rebalance_events{portfolio_id=\"demo-portfolio\"}"
        },
        {
          "name": "Alert Events",
          "datasource": "Portfolio Analytics API",
          "enable": true,
          "iconColor": "red",
          "query": "portfolio_alert_events{portfolio_id=\"demo-portfolio\"}"
        }
      ]
    },
    "style": "dark",
    "graphTooltip": 1
  }
}