            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "center",
              "displayMode": "auto"
            },
            "decimals": 2
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Status"
              },
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "mappings",
                  "value": [
                    {
                      "options": {
                        "OK": {
                          "color": "green",
                          "index": 0
                        }
                      },
                      "type": "value"
                    },
                    {
                      "options": {
                        "WARNING": {
                          "color": "yellow",
                          "index": 1
                        }
                      },
                      "type": "value"
                    },
                    {
                      "options": {
                        "BREACH": {
                          "color": "red",
                          "index": 2
                        }
                      },
                      "type": "value"
                    }
