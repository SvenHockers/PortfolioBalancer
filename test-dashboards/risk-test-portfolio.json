        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "scaleDistribution": {
                "type": "linear"
              }
            },
            "color": {
              "mode": "spectrum",
              "scheme": "RdYlBu",
              "steps": 64
            },
            "min": -1,
            "max": 1
          }
        },
        "options": {
          "calculate": false,
          "cellGap": 2,
          "cellValues": {
            "decimals": 2
          },
          "color": {
            "exponent": 0.5,
            "fill": "dark-orange",
            "mode": "spectrum",
            "reverse": false,
            "scale": "exponential",
            "scheme": "RdYlBu",
            "steps": 64
          },
          "exemplars": {
            "color": "rgba(255,0,255,0.7)"
